{
  "name": "hardhat-project",
  "author": "Robert Campbell",
  "license": "AGPL-3.0-only",
  "scripts": {
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "test": "hardhat test",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'contracts/**/*.sol' --fix",
    "lint": "yarn run prettier && npm run solhint",
    "deploy": "hardhat xdeploy",
    "verify": "hardhat etherscan",
    "start": "hardhat node",
    "watch": "concurrently -r --kill-others \"chokidar 'src/**/*.sol' -c 'yarn build'\""
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "chai": "^4.3.6",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.9.9",
    "xdeployer": "^1.1.14"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6"
  }
}